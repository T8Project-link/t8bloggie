rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read blog posts
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data != null;
    }
    
    // Only allow read access to admins collection for authentication
    match /admins/{email} {
      allow read: if request.auth != null && request.auth.token.email == email;
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read blog posts and toggle reactions
    match /posts/{postId} {
      allow read: if true;
      allow update: if (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['reactions']))
                   || (request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data != null);
      allow create, delete: if request.auth != null && 
                             get(/databases/$(database)/documents/admins/$(request.auth.token.email)).data != null;
    }
    
    // Only allow read access to admins collection for authentication
    match /admins/{email} {
      allow read: if request.auth != null && request.auth.token.email == email;
      allow write: if request.auth != null && request.auth.token.email == email;
    }
    
    // Allow read access to users collection
    match /users/{userId} {
      allow read: if true;
    }
  }
}
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone to read blog posts
    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}